<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:textAlignment="center"
    tools:context=".Tentang"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/telegramLinkContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="8dp"
            android:background="#009688"
            android:fontFamily="times"
            android:text="SebiaKu 3.0"
            android:textAlignment="center"
            android:textColor="#F8F9FA"
            android:textSize="24sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:autoLink="all"
            android:lineSpacingMultiplier="1"
            android:linksClickable="true"
            android:text="@string/content_about"
            android:textColor="@android:color/black"
            android:justificationMode="inter_word"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:src="@drawable/telegram_icon" />

            <TextView
                android:id="@+id/tvTelegramLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>